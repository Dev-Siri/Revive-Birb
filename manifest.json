{
  "manifest_version": 3,
  "name": "Revive Birb",
  "version": "1.0",
  "description": "Bring back the old twitter logo and also replace many ùïè references with good ol birb.",
  "permissions": ["tabs", "activeTab", "scripting", "webNavigation"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icons/32.png",
    "default_title": "Revive Birb"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "injects/scripts/loading.js",
        "images/twitter.avif",
        "images/banner.avif",
        "images/auth-hero-banner.avif",
        "images/favicon-noto.ico",
        "images/favicon.ico"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": ["main.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    },
    {
      "js": ["injects/loading.js"],
      "css": ["styles/loading.css"],
      "run_at": "document_start",
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
